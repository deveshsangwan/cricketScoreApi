{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "app/dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitAny": true
  },
  "include": [
    "app/src/**/*.ts",
    "app/core/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}