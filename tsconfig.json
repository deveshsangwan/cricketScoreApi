{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "app/dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true
  },
  "include": [
    "app/src/**/*.ts",
    "app/core/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}