{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "app/src",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "app/ts_src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}