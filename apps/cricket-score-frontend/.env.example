# Cricket Score Frontend Environment Variables
# Copy this file to .env.local and update the values as needed

# Clerk Authentication (required for user authentication)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://cricketapi-r9zv.onrender.com

# App Configuration
NEXT_PUBLIC_APP_DESCRIPTION="Your ultimate source for real-time cricket scores and updates"
NEXT_PUBLIC_APP_NAME=CricketScore

# Feature Flags
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_REAL_TIME=true